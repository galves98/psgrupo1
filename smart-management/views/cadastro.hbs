<!-- CSS -->
<style>
.myForm {
font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
font-size: 0.8em;
width: 28em;
padding: 1em;
border: 3px solid  #febb11;
height: auto;

}

.myForm * {
box-sizing: border-box;
box-align: center;
margin-top: 0px;
color: black;
}

.myForm fieldset {
border: none;
padding: 0;
box-align: center;
margin-top: 0px;
color: antiquewhite;

}

.myForm legend,
.myForm label {
padding: 0;
font-weight: bold;
box-align: center;
}

.myForm label.choice {
font-size: 0.9em;
font-weight: normal;
box-align: center;
}

.myForm input[type="text"],
.myForm input[type="text"],
.myForm input[type="password"],
.myForm input[type="datetime-local"],
.myForm select,
.myForm textarea {
display: block;
width: 100%;
border: 2px solid  #febb11;
font-family: "Lucida Sans Unicode", "Lucida Grande", sans-serif;
font-size: 1.2em;
padding: 0.4em;
box-align: center;
}

.myForm textarea {

}

.myForm button {
padding: 1.5em;
border-radius: 1.5em;
background:  #febb11;
border: none;
font-weight: bold;
margin-top: 0.75em;
font-size: 15px;


}

.myForm button:hover {
background: antiquewhite;
